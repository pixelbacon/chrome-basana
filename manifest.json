{
	"manifest_version": 2,
  "name": "Basana",
  "version": "0.0.1",
  "description": "A few CSS improvements to Asana.com",
  "icons":{
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
	},
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": false
  },
	"permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "bower_components/jquery/dist/jquery.min.js",
    "src/inject/inject-basana.css",
    "src/inject/inject-basana.js"
	],
  "content_scripts":[
    {
      "matches": ["*://app.asana.com/*"],
      "css": [],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "src/inject/inject-basana.js"
      ]
    }
  ]
}